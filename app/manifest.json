{
  "manifest_version": 2,
  "name": "Rise Vision Offline Player",
  "version": "0.2.1",
  "minimum_chrome_version": "42",
  "app": {
    "background": {
      "scripts": ["player/main/background-script.js"]
    }
  },
  "offline_enabled": true,
  "kiosk_enabled": true,
  "permissions": [
    "webview",
    "alarms",
    "alwaysOnTopWindows",
    "geolocation",
    "power",
    "storage",
    "fileSystem",
    "unlimitedStorage",
    "system.display",
    "pointerLock",
    "gcm",
    "<all_urls>"
  ],
  "webview": {
     "partitions": [
       {
         "name": "packaged",
         "accessible_resources": ["content/empty-schedule-screen/*"]
       }
     ]
  }
}
