{
  "manifest_version": 2,
  "name": "Offline Player",
  "version": "0.0.1",
  "minimum_chrome_version": "41",
  "app": {
    "background": {
      "scripts": ["player/main/background-script.js"]
    }
  },
  "permissions": [
    "webview",
    "webRequest",
    "webRequestBlocking",
    "alarms",
    "alwaysOnTopWindows",
    "geolocation",
    "power",
    "storage",
    "fileSystem",
    "unlimitedStorage",
    "system.display",
    "pointerLock",
    "<all_urls>"
  ],
  "webview": {
     "partitions": [
       {
         "name": "packaged",
         "accessible_resources": ["content/restaurant-promotion/*"]
       },
       {
         "name": "packaged",
         "accessible_resources": ["content/retail-qrcode/*"]
       },
       {
         "name": "packaged",
         "accessible_resources": ["content/empty-schedule-screen/*"]
       }
     ]
  }
}
